<% layout('layouts/boilerplate') -%>

<div class="mt-3 justify-content-center">
    <h1 class="offset-3 mt-3 h2">Login</h1>
    <form action="/login" method="POST" novalidate class="border-dark mt-3 offset-3 row g-3 needs-validation">
        <div class="col-md-7 mb-2">
            <label for="email" class="form-label">Name</label>
            <input required type="text" class="form-control" id="username" name="username"
                placeholder="John Wick">
        </div>
        <div class="col-md-7 mb-4">
            <label for="password" class="form-label">Password</label>
            <input required type="password" class="form-control" id="password" name="password" placeholder="********">
        </div>

        <div class="mb-4">
            <button type="submit" class="col-md-7 btn btn-primary"><h4>Login</h4></button>
        </div>
    </form>
</div>