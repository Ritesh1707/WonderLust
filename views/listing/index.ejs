<% layout('layouts/boilerplate') -%>



<div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
<% for (listing of allListing){ %>
  <a href="/listings/<%=listing._id%>" class="card col listing-card" style="width: 18rem;">
    <img src="<%=listing.image.url%>" class="card-img-top" alt="...">
    <div class="card-img-overlay"></div>
    <div class="card-body">

      <h5 class="card-title"><%=listing.title%></h5>
      <p class="card-text">&#8377;<%=listing.price%>/night</p>
    </div>
</a>
<% } %>
</div>