<% layout('layouts/boilerplate') -%>

    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

    <div class="col-md-8 mb-2">
        <label for="title" class="form-label">Title</label>
        <input required type="text" class="form-control" id="title" name="title" placeholder="Enter Your title ...."
            value="<%=listing.title%>">
    </div>
    <div class="col-md-8 mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea required class="form-control" id="description" rows="3" name="description"><%=listing.description%></textarea>
    </div>
    <img class="card m-4 "  src=" <%= compressedUrl %> " alt="">
    <!-- <img src="<%=compressedUrl%>" alt=""> -->

    <div class="col-md-8 mb-2">
        <label for="image" class="form-label">Upload new Image</label>
        <input type="file" class="form-control" id="image" name="image[url]" placeholder="Enter the image URL">
    </div>
    <div class="col-md-8 mb-6">
        <label for="price" class="form-label">Price</label>
        <input required type="number" class="form-control" id="price" name="price" value="<%=listing.price%>">
    </div>

    <div class="col-md-8 mb-2">
        <label for="country" class="form-label">Country</label>
        <input required type="text" class="form-control" id="country" name="country" placeholder="India"
            value="<%=listing.country%>">
    </div>
    <div class="col-md-8 mb-2">
        <label for="location" class="form-label">Location</label>
        <input required type="text" class="form-control" id="location" name="location" placeholder="Jaipur/Rajasthan"
            value="<%=listing.location%>">
    </div>

    <div class="col-12 mb-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>